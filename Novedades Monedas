void schedule.Novedad_moneda()
{
username = "todocostura";
password = "TC0stur4!";
credentials = username + ":" + password;
encoded_credentials = zoho.encryption.base64Encode(credentials);
headers = Map();
headers.put("Authorization","Basic " + encoded_credentials);
headers.put("Content-Type","application/json");
idZoho = null;
api_url = "http://190.110.230.161:8282/currencies";
response = invokeurl
[
	url :api_url
	type :GET
	headers:headers
];
if(response != null && response.size() > 0)
{
	for each  record in response
	{
		data = Map();
		idmoneda = record.get("codCurrency");
		data.put("CodCurrency",idmoneda);
		data.put("Name",record.get("descCurrency"));
		data.put("Siglas",record.get("siglas"));
		data.put("TipoCambioDia",record.get("tipoCambioDia"));
		searchResponse = zoho.crm.searchRecords("Moneda","(CodCurrency:equals:" + idmoneda + ")");
		if(searchResponse.size() > 0)
		{
			monedaId = searchResponse.get(0).get("id");
			updateResponse = zoho.crm.updateRecord("Moneda",monedaId,data);
			info "Moneda " + monedaId + " actualizado: " + updateResponse;
		}
		else
		{
			createResponse = zoho.crm.createRecord("Moneda",data);
			info "Moneda " + monedaId + " creado: " + createResponse;
		}
	}
}
}
